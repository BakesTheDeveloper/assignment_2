<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFDD0"
    android:padding="16dp">

    <TextView
        android:id="@+id/editDialogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit Question"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editQuestionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Question"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:maxLines="4"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/editAnswerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer: "
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/editQuestionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/editFalseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="False"
        android:textColor="#000000"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/editAnswerLabel"
        app:layout_constraintStart_toEndOf="@+id/editAnswerLabel"
        app:layout_constraintBottom_toBottomOf="@+id/editAnswerLabel" />

    <Switch
        android:id="@+id/editAnswerSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/editFalseLabel"
        app:layout_constraintStart_toEndOf="@+id/editFalseLabel"
        app:layout_constraintBottom_toBottomOf="@+id/editFalseLabel" />

    <TextView
        android:id="@+id/editTrueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="True"
        android:textColor="#000000"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/editAnswerSwitch"
        app:layout_constraintStart_toEndOf="@+id/editAnswerSwitch"
        app:layout_constraintBottom_toBottomOf="@+id/editAnswerSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>
